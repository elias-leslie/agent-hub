# Agent Hub Backend Configuration
# Copy to ~/.env.local and fill in values

# Required: Database
AGENT_HUB_DB_URL=postgresql://agent_hub_app:PASSWORD@localhost:5432/agent_hub

# Required: Redis (for Celery)
AGENT_HUB_REDIS_URL=redis://localhost:6379/2

# Required: Encryption key for credentials (44-char Fernet key)
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AGENT_HUB_ENCRYPTION_KEY=

# Required: Secret key for sessions
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
AGENT_HUB_SECRET_KEY=

# Optional: AI API keys (can also store in database)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Optional: CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3003

# Optional: Logging
LOG_LEVEL=INFO
DEBUG=false
